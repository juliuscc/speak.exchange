{
  "name": "next-ez",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next start",
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "ci-build": "npm-run-all -s build export",
    "lint": "eslint \"**/*.js\"",
    "check-prettier": "prettier '**/*' --check",
    "publish": "gh-pages -d out --dotfiles --user \"Julius Celik <julius.cc@hotmail.com>\" --repo \"git@github.com:juliuscc/speak.exchange.git\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:juliuscc/speak.exchange.git"
  },
  "dependencies": {
    "next": "9.2.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "styled-components": "^5.0.1",
    "styled-icons": "^9.5.0"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,yml,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "react/jsx-filename-extension": 0,
      "react/react-in-jsx-scope": 0,
      "react/prop-types": 0,
      "no-underscore-dangle": 0,
      "import/imports-first": [
        "error",
        "absolute-first"
      ],
      "import/newline-after-import": "error",
      "react/jsx-props-no-spreading": 0
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "license": "MIT",
  "contributors": [
    "Julius Celik <julius.cc@hotmail.com>",
    "Blenda Fröjdh <blenda.frojdh@live.se>",
    "Catarina Allen d'Ávila Silveira <cads@kth.se>",
    "Robert Falcasantos <rjfa@kth.se>"
  ]
}
